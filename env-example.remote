ADMIN_API_TOKEN=token
LANGUAGE_DETECTION_SEGMENTS=10
VAD_FILTER_THRESHOLD=0.5
WHISPER_MODEL_SIZE=medium
DEVICE_TYPE=remote
WL_MAX_CLIENTS=10
BOT_IMAGE_NAME=vexa-bot:dev
# Remote Transcriber API Configuration
REMOTE_TRANSCRIBER_URL=https://transcription-service.dev.vexa.ai/v1/audio/transcriptions
REMOTE_TRANSCRIBER_API_KEY=your_api_key_here
REMOTE_TRANSCRIBER_MODEL=whisper-v3-turbo
REMOTE_TRANSCRIBER_TEMPERATURE=0
REMOTE_TRANSCRIBER_VAD_MODEL=silero
# Voice Agent / TTS Configuration (Optional)
# Required only if using the voice agent feature (voice_agent_enabled: true)
OPENAI_API_KEY=

# Exposed Host Ports
API_GATEWAY_HOST_PORT=8056
ADMIN_API_HOST_PORT=8057
TRANSCRIPTION_COLLECTOR_HOST_PORT=8123
POSTGRES_HOST_PORT=5438
# Remote Database Configuration
# Set REMOTE_DB=true to use remote PostgreSQL instead of local Docker postgres
# When REMOTE_DB=true: Uncomment and set the remote database credentials below
# DB_HOST=your-remote-db-host
# DB_PORT=5432
# DB_NAME=your-db-name
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password
REMOTE_DB=false

# Recording Storage Backend
# - minio: default object storage (works locally via docker compose and in cloud with S3-compatible stores)
# - local: filesystem backend (for simple local setup)
STORAGE_BACKEND=minio
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=vexa-access-key
MINIO_SECRET_KEY=vexa-secret-key
MINIO_BUCKET=vexa-recordings
MINIO_SECURE=false

# Local backend options (used when STORAGE_BACKEND=local)
LOCAL_STORAGE_DIR=/data/recordings
LOCAL_STORAGE_FSYNC=true
# Docker Compose source for /data/recordings.
# Default uses named volume "recordings-data"; set to a host path for easier inspection, e.g. ./data/recordings
# LOCAL_STORAGE_VOLUME_SOURCE=recordings-data

# Cloud S3 options (used when STORAGE_BACKEND=s3)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=vexa-recordings
# S3_ENDPOINT=
# S3_SECURE=true

# WhisperLive durable recording upload cadence
WL_RECORDING_SNAPSHOT_SECONDS=20
WL_RECORDING_UPLOAD_URL=http://bot-manager:8080/internal/recordings/upload
